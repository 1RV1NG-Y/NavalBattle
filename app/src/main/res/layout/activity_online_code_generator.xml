<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OnlineCodeGeneratorActivity">

    <TextView
        android:id="@+id/idTVHead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="Multijugador"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idTVHead"
        android:hint="Codigo"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:id="@+id/idEdtCode"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/idBtnCreate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idEdtCode"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:backgroundTint="#ABFF6BFD"
        android:text="Crear"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/idBtnJoin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idBtnCreate"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#ABFF6BFD"
        android:layout_marginTop="20dp"
        android:text="Unirse"
        android:textAllCaps="false" />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:id="@+id/idPBLoading"/>

</RelativeLayout>